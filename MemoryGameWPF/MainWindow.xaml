<Window x:Class="MemoryGameWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Memory Game" Height="600" Width="600"
        MinHeight="400" MinWidth="400"
        WindowStartupLocation="CenterScreen">

    <!-- Ресурси за целиот прозорец -->
    <Window.Resources>
        <DropShadowEffect x:Key="DropShadowEffect"
                          Color="Black"
                          BlurRadius="15"
                          ShadowDepth="3"
                          Opacity="0.4"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Turn label -->
            <RowDefinition Height="Auto"/>
            <!-- Timer + progress -->
            <RowDefinition Height="*"/>
            <!-- Game grid -->
        </Grid.RowDefinitions>

        <!-- Текст за потег -->
        <TextBlock x:Name="TurnLabel"
                   FontSize="18"
                   Margin="10"
                   Text="На потег е: Ти"/>

        <!-- Тајмер и прогрес бар -->
        <StackPanel Grid.Row="1" Margin="10" Orientation="Vertical">
            <TextBlock x:Name="TimerText"
                       FontSize="16"
                       Margin="0,0,0,5"/>
            <ProgressBar x:Name="ProgressBarMatches"
                         Height="20"
                         Minimum="0"
                         Maximum="8"
                         Value="0"
                         Foreground="Green"
                         Background="#EEE"/>
        </StackPanel>

        <!-- Мрежа со картички -->
        <Viewbox Grid.Row="2" Stretch="Uniform">
            <UniformGrid x:Name="CardGrid"/>
        </Viewbox>

        <!-- Панел за крај на игра -->
        <Grid x:Name="EndGamePanel"
              Background="#AA000000"
              Visibility="Collapsed"
              Grid.RowSpan="3">
            <Border VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Background="White"
                    Padding="25"
                    CornerRadius="15"
                    Effect="{StaticResource DropShadowEffect}">
                <StackPanel Width="320" HorizontalAlignment="Center">
                    <TextBlock x:Name="EndGameMessage"
                               Text="Честитки!"
                               FontSize="24"
                               FontWeight="Bold"
                               TextAlignment="Center"
                               Foreground="#2E8B57"
                               Margin="0,0,0,12"/>

                    <TextBlock x:Name="EndGameStats"
                               Text="Време: 45s, Потези: 12"
                               FontSize="16"
                               TextAlignment="Center"
                               Foreground="#555555"
                               Margin="0,0,0,20"/>

                    <Button Content="🔁 Играј повторно"
                            Click="PlayAgain_Click"
                            Margin="0,0,0,12"
                            FontSize="16"
                            Padding="10"
                            Background="#2E8B57"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            HorizontalAlignment="Stretch">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#2E8B57"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="8">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#246B45"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#1B4F33"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="🏠 Врати се во мени"
                            Click="BackToMenu_Click"
                            Margin="0,0,0,12"
                            FontSize="16"
                            Padding="10"
                            Background="#4682B4"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            HorizontalAlignment="Stretch">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#4682B4"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="8">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#356799"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#274F6D"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="❌ Излези"
                            Click="Exit_Click"
                            FontSize="16"
                            Padding="10"
                            Background="#B22222"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            HorizontalAlignment="Stretch">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#B22222"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="8">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#7A1616"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#4D0F0F"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
