<Window x:Class="MemoryGameWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Memory Game" Height="600" Width="600"
        MinHeight="400" MinWidth="400"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <DropShadowEffect x:Key="DropShadowEffect"
                          Color="Black"
                          BlurRadius="15"
                          ShadowDepth="3"
                          Opacity="0.4"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- info panel -->
            <RowDefinition Height="*"/>
            <!-- mreza,grid -->
        </Grid.RowDefinitions>

        <!-- panelot so informaciite -->
        <Border Grid.Row="0"
                Background="#F9F9F9"
                BorderBrush="#DDD"
                BorderThickness="1"
                CornerRadius="8"
                Margin="10"
                Padding="10"
                Effect="{StaticResource DropShadowEffect}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Grid.Column="0">
                    <TextBlock x:Name="TurnLabel"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="#2E8B57"
                               Text="🎯 Turn: You"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,5"/>

                    <TextBlock x:Name="TimerText"
                               FontSize="16"
                               Foreground="#333"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,5"/>

                    <ProgressBar x:Name="ProgressBarMatches"
                                 Width="250"
                                 Height="18"
                                 Minimum="0"
                                 Maximum="8"
                                 Value="0"
                                 Foreground="#4682B4"
                                 Background="#E0E0E0"
                                 Margin="0,5,0,0"
                                 HorizontalAlignment="Center"/>
                </StackPanel>

                
                <Button Grid.Column="1"
                        Content="🏠 Menu"
                        Click="GoToMenu_Click"
                        Margin="10,0,0,0"
                        FontSize="14"
                        Padding="5,2"
                        Background="Transparent"
                        Foreground="#555"
                        BorderThickness="0"
                        Cursor="Hand"
                        VerticalAlignment="Top"
                        ToolTip="Return to main menu"/>

               
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Top" Margin="10,0,0,0" HorizontalAlignment="Right" >
                    <Button Content="💾 Save"
                            Click="SaveGame_Click"
                            FontSize="14"
                            Padding="5,2"
                            Background="Transparent"
                            Foreground="#555"
                            BorderThickness="1"
                            Cursor="Hand"
                            ToolTip="Save the current game"
                            Margin="0,0,5,0"/>

                    <Button Content="📂 Load"
                            Click="LoadGame_Click"
                            FontSize="14"
                            Padding="5,2"
                            Background="Transparent"
                            Foreground="#555"
                            BorderThickness="1"
                            Cursor="Hand"
                            ToolTip="Load saved game"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- mreza so kartickite -->
            <Viewbox Grid.Row="1" Stretch="Uniform">
            <UniformGrid x:Name="CardGrid"/>
        </Viewbox>

        
        <Grid x:Name="EndGamePanel"
              Background="#AA000000"
              Visibility="Collapsed"
              Grid.RowSpan="2">
            <Border VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Background="White"
                    Padding="25"
                    CornerRadius="15"
                    Effect="{StaticResource DropShadowEffect}">
                <StackPanel Width="320" HorizontalAlignment="Center">
                    <TextBlock x:Name="EndGameMessage"
                               Text="Congratulations!"
                               FontSize="24"
                               FontWeight="Bold"
                               TextAlignment="Center"
                               Foreground="#2E8B57"
                               Margin="0,0,0,12"/>

                    <TextBlock x:Name="EndGameStats"
                               Text="Time: 45s, Moves: 12"
                               FontSize="16"
                               TextAlignment="Center"
                               Foreground="#555555"
                               Margin="0,0,0,20"/>

                    <Button Content="🔁 Play again"
                            Click="PlayAgain_Click"
                            Margin="0,0,0,12"
                            FontSize="16"
                            Padding="10"
                            Background="#2E8B57"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            HorizontalAlignment="Stretch">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#2E8B57"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="8">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#246B45"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#1B4F33"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="🏠 Return to Menu"
                            Click="BackToMenu_Click"
                            Margin="0,0,0,12"
                            FontSize="16"
                            Padding="10"
                            Background="#4682B4"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            HorizontalAlignment="Stretch">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#4682B4"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="8">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#356799"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#274F6D"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="❌ Exit"
                            Click="Exit_Click"
                            FontSize="16"
                            Padding="10"
                            Background="#B22222"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            HorizontalAlignment="Stretch">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#B22222"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="8">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#7A1616"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#4D0F0F"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>