<Window x:Class="MemoryGameWPF.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Memory Game" Height="400" Width="300"
        WindowStartupLocation="CenterScreen"
        Background="#FFFDFDFD">

    <Window.Resources>
        <!-- Ефект за сенка -->
        <DropShadowEffect x:Key="DropShadowEffect"
                          Color="Black"
                          BlurRadius="15"
                          ShadowDepth="3"
                          Opacity="0.4"/>
    </Window.Resources>

    <Grid>
        <!-- Главното мени -->
        <StackPanel x:Name="MainMenuPanel"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Margin="20">

            <TextBlock Text="MEMORY GAME"
                       FontSize="28"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,30"/>

            <Button Content="EASY"
                    Click="Easy_Click"
                    Background="Green"
                    Foreground="White"
                    FontSize="18"
                    Height="40"
                    Margin="0,0,0,10"/>

            <Button Content="MEDIUM"
                    Click="Medium_Click"
                    Background="Orange"
                    Foreground="White"
                    FontSize="18"
                    Height="40"
                    Margin="0,0,0,10"/>

            <Button Content="HARD"
                    Click="Hard_Click"
                    Background="Red"
                    Foreground="White"
                    FontSize="18"
                    Height="40"
                    Margin="0,0,0,10"/>

            <Button Content="HIGH SCORE"
                    Click="HighScore_Click"
                    Background="LightGray"
                    Foreground="Black"
                    FontSize="18"
                    Height="40"
                    Margin="0,0,0,10"/>
        </StackPanel>

        <!-- Панел за High Score -->
        <Grid x:Name="HighScoresPanel"
              Background="#AA000000"
              Visibility="Collapsed">

            <Border Width="350"
                    Padding="25"
                    Background="White"
                    CornerRadius="15"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Effect="{StaticResource DropShadowEffect}">

                <StackPanel>

                    <TextBlock Text="🏆 Најдобар резултат"
                               FontSize="26"
                               FontWeight="Bold"
                               Foreground="#2E8B57"
                               TextAlignment="Center"
                               Margin="0,0,0,20"/>

                    <ListBox x:Name="HighScoresListBox"
                             BorderThickness="0"
                             FontSize="18"
                             Foreground="#444"
                             HorizontalContentAlignment="Center"
                             Background="Transparent"
                             Margin="0,0,0,20"/>

                    <Button Content="🔙 Назад"
                            Click="Back_Click"
                            Padding="10"
                            FontSize="16"
                            Background="#4682B4"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            HorizontalAlignment="Center"
                            Width="120">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#4682B4"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="8"
                                                    SnapsToDevicePixels="True">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#356799"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#274F6D"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>