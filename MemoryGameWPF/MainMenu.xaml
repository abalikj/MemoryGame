<Window x:Class="MemoryGameWPF.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Memory Game" Height="400" Width="300" WindowStartupLocation="CenterScreen">
    <Grid Background="#FFFDFDFD">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
            <TextBlock Text="MEMORY GAME" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,30"/>
            <Button Content="EASY" Click="Easy_Click" Background="Green" Foreground="White" FontSize="18" Height="40" Margin="0,0,0,10"/>
            <Button Content="MEDIUM" Click="Medium_Click" Background="Orange" Foreground="White" FontSize="18" Height="40" Margin="0,0,0,10"/>
            <Button Content="HARD" Click="Hard_Click" Background="Red" Foreground="White" FontSize="18" Height="40"/>
        </StackPanel>
    </Grid>
</Window>
    
    